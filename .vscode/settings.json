{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E203,W503,F401"
    ],
    "black-formatter.args": [
        "--line-length=120"
    ],
    "files.associations": {
        ".coveragerc": "ini",
        "pytest.ini": "ini",
        "setup.cfg": "ini",
        "tox.ini": "ini"
    }
}